@model UpdateBrandDto
@{
    ViewData["Title"] = "EditBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Edit Brand</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="BrandId" />
                        <label>Brand Name</label>
                        <input type="text" class="form-control" value="@Model.BrandName" asp-for="BrandName" />
                        <br />
                        <label>Brand Image</label>
                        <input type="text" class="form-control" value="@Model.ImageUrl" asp-for="ImageUrl" />
                        <br />
                        <button type="submit" class="btn btn-success">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


