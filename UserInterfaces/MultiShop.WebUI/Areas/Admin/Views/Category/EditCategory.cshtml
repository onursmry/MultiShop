@model CategoryUpdateDto

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Edit Category</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="CategoryId" />
                        <label>Category Name</label>
                        <input type="text" class="form-control" value="@Model.CategoryName" asp-for="CategoryName" value="@Model.CategoryName" />
                        <br />
                        <label>Category Image</label>
                        <input type="text" class="form-control" value="@Model.ImageUrl" asp-for="ImageUrl" />
                        <br />
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>